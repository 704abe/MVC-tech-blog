<!-- Loop over each object in the projects array -->
<div class="col-12">
  <div class="flex-column justify-content-center">
  {{#each posts as |post| }}
  <div class="eachPost row bg-white border rounded col-9 shadow-sm m-4">
    <a class="" href="/post/{{post.id}}">
    <div class="col-12">
        <!-- Call helper function with triple brackets to render the emoji span as HTML -->
        {{!-- {{{get_emoji}}} --}}
          <h2>{{post.title}}</h2>
      <p>
        <!-- Pass needed_funding value to the helper function -->
        <span class="text-muted">{{post.content}}</span>
      </p>
      <p>Created by {{user.username}} on {{format_date post.date_created}}</p>
    </div>
    <div class="col-7">
      <p class="text-light">
        {{post.description}}
      </p>
    </div>
    </a>
  </div>

  {{/each}}
  </div>
</div>
