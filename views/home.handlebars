<!-- Loop over each object in the projects array -->
<div class="home-wrapper col-12 d-flex flex-column flex-lg-row">
  <div class="home-left row">
    <div class="card col-12 p-1 m-4 bg-dark text-center">
      <h3 class="text-light">All Posts</h3>
    </div>
    <div class="flex-column justify-content-center">
    {{#each posts as |post| }}
    <div class="eachPost row bg-white border rounded col-12 m-4 pt-1">
      <a class="" href="/post/{{post.id}}">
      <div class="col-12">
          <!-- Call helper function with triple brackets to render the emoji span as HTML -->
          {{!-- {{{get_emoji}}} --}}
            <h2>{{post.title}}</h2>
        <p>
          <!-- Pass needed_funding value to the helper function -->
          <span class="text-muted">{{post.content}}</span>
        </p>
        <p>Created by {{user.username}} on {{format_date post.date_created}}</p>
      </div>
      <div class="col-7">
        <p class="text-light">
          {{post.description}}
        </p>
      </div>
      </a>
    </div>

    {{/each}}
    </div>
  </div>
  <div class="home-right col-2 d-flex flex-column">
    {{!-- <div class="d-flex justify-content-center">
      <img id="mvc-logo" class="img-fluid" src="https://i.imgur.com/fXhUTlD.png" sameSite="strict" alt="MVC logo"> --}}
    </div>
  </div>
</div>
